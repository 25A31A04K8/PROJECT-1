#include <stdio.h>

int main() {
    char name[50], department[50];
    int id;
    float basic, hra, da, pf, gross, net;

    printf("Enter Employee ID: ");
    scanf("%d", &id);

    printf("Enter Employee Name: ");
    scanf("%s", name);

    printf("Enter Department: ");
    scanf("%s", department);

    printf("Enter Basic Salary: ");
    scanf("%f", &basic);

    // Salary Calculations
    hra = basic * 0.20;       // 20% of basic
    da  = basic * 0.10;       // 10% of basic
    pf  = basic * 0.08;       // 8% deduction
    gross = basic + hra + da;
    net = gross - pf;

    // Output
    printf("\n------------------------------\n");
    printf("      EMPLOYEE SALARY SLIP\n");
    printf("------------------------------\n");
    printf("Employee ID      : %d\n", id);
    printf("Employee Name    : %s\n", name);
    printf("Department       : %s\n", department);
    printf("------------------------------\n");
    printf("Basic Salary     : %.2f\n", basic);
    printf("HRA (20%%)        : %.2f\n", hra);
    printf("DA (10%%)         : %.2f\n", da);
    printf("PF Deduction (8%%): %.2f\n", pf);
    printf("------------------------------\n");
    printf("Gross Salary     : %.2f\n", gross);
    printf("Net Salary       : %.2f\n", net);
    printf("------------------------------\n");

    return 0;
}
